@page "/addlocker"
@inject LockerDataService DataService
@inject ISnackbar SnackbarService
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager

<PageTitle>Ajouter un coffre</PageTitle>
<MudText Typo="Typo.h3" GutterBottom="true">Ajouter un nouveau coffre.</MudText>

<MudGrid>
    <MudItem xs="12">
        <MudTextField T=string id="name" Style="max-width:400px" Label="Nom du coffre" Variant="Variant.Outlined"></MudTextField>
    </MudItem>
    <MudItem xs="12">
        <MudTextField T=string id="password" Style="max-width:400px" Label="Mot de passe" Variant="Variant.Outlined" InputType="@_passwordInput" OnAdornmentClick="ShowHidePassword" AdornmentIcon="@_passwordInputIcon" Adornment="Adornment.End" AdornmentAriaLabel="Afficher le mot de passe."></MudTextField>
    </MudItem>
    <MudItem xs="12">
        <MudButton OnClick="BeginAddLocker" StartIcon="@Icons.Material.Filled.Add" Variant="Variant.Filled" Color="Color.Primary">Valider</MudButton>
    </MudItem>
</MudGrid>


